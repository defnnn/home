{
  "build": { "dockerfile": "Dockerfile" },
  "remoteUser": "ubuntu",
  "mounts": [
    "source=k3d-password-store,target=/home/ubuntu/.password-store",
    "source=k3d-kube,target=/home/ubuntu/.kube",
    "source=${localEnv:HOME}/work,target=${localEnv:HOME}/work,type=bind,consistency=delegated"
  ],
  "runArgs": [
    "-v",
    "/var/run/docker.sock:/var/run/docker.sock",
    "--network=cloudbuild"
  ],
  "postStartCommand": "/home/ubuntu/etc/hook-start"
}
